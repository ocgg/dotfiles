        // "icons": {
        //   "blueman": "bluetooth",
        //   "TelegramDesktop": "$HOME/.local/share/icons/hicolor/16x16/apps/telegram.png"
        // }
    },
    "clock": {
        // "timezone": "America/New_York",
        "locale": "fr_FR.utf8",
	    "tooltip-format": "<span size='15pt' font='Hack Nerd Font'>{calendar}</span>",
        "format-alt": "{:%A %e %B %Y}",
        "calendar": {
            "mode-mon-col"  : 3,
            "on-scroll"     : 1,
            "on-click-right": "mode",
            "format": {
                "months":     "<span color='white'><b>{}</b></span>",
                "days":       "<span color='#999'><b>{}</b></span>",
                // "weeks":      "<span color='#99ffdd'>{}</span>",
                "weekdays":   "<span color='#777'>{}</span>",
                "today":      "<span background='white' color='black'><b>{}</b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "cpu": {
        "format": "{usage}% Ôãõ"
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    "temperature": {
        "interval": 2,
        // "thermal-zone": 2,
        "hwmon-path": "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input",
        "critical-threshold": 75,
        "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{icon} {temperatureC}¬∞C",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
