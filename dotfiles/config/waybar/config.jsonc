        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "custom/power": {
        "format" : "‚èª",
        "min-length": 4,
		"tooltip": false,
        "on-click": "wlogout -s -b2 -L750 -R750 -T400 -B400 -c20 -r50"
	},
    "custom/cliphist": {
        "format" : "ÔÅø",
        "min-length": 4,
		"tooltip": false,
        // "on-click": "wlogout -s -b2 -L750 -R750 -T400 -B400 -c20 -r50",
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/cliphist_menu.xml",
		"menu-actions": {
			"open": "cliphist list | rofi -dmenu -p cliphist | cliphist decode | wl-copy",
            "delete": "cliphist list | rofi -dmenu -p cliphist | cliphist delete",
			"clear": "cliphist wipe"
		}
    }
}
