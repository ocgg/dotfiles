        // "hyprland/submap",
        // "hyprland/scratchpad",
        // "custom/media",
        "idle_inhibitor",
        "hyprland/workspaces"
    ],
    "modules-center": [
        // "sway/window",
        // "hyprland/window",
        "clock",
        "mpd"
    ],
    "modules-right": [
        // "tray",
        "network",
        // "cpu",
        // "memory",
        "temperature",
        // "pulseaudio",
        "wireplumber#sink",
        "wireplumber#source",
        "bluetooth",
        "custom/cliphist",
        // "backlight",
        // "keyboard-state",
        "battery",
        // "battery#bat2",
        "power-profiles-daemon",
        "hyprland/language",
