    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },
    "battery": {
        "interval": 5,
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 10
        },
        "format": "{icon}",
        "format-full": "Û±ü¢",
        "format-charging": "{icon}",
        "format-plugged": "Ôá¶",
        // "format-full": "",
        // "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        "format-icons": {
            "default": ["Û∞ÇÉ", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
            "charging": ["Û∞¢ü", "Û∞¢ú", "Û∞ÇÜ", "Û∞Çá", "Û∞Çà", "Û∞¢ù", "Û∞Çâ", "Û∞¢û", "Û∞Çä", "Û∞Çã", "Û∞ÇÖ"]
        },
        "tooltip-format": "Û∞Çë {capacity}%\nÛ±ß• {time}\nÛ∞ÇÑ {power}W\nÛ±àë {health}%",
        "on-click": ""
    },
    // "battery#bat2": {
    //     "bat": "BAT2"
    // },
    "hyprland/language": {
        "format": "{short}"
    },
    "power-profiles-daemon": {
        "min-length": 3,
        "justify": "center",
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "interval": 2,
        // "min-length": 10,
        "align": 0,
        "format": "ÔÄô {bandwidthDownOctets}",
        // "format-wifi": "Ôá´ {bandwidthDownOctets}",
        "tooltip-format-wifi": "ÔÇì {bandwidthUpOctets}\nÔá´  {signalStrength}% - {frequency}Ghz\n\n{essid}\n{ifname}\n{gwaddr}/{cidr}",
        "format-ethernet": "Û∞±¶ {bandwidthDownOctets}",
